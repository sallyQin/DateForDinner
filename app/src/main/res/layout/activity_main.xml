<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1.datefordinner.AddDateActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:background="#E9967A"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/app_name"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="#FFD700"
                android:textStyle="bold"
                android:textSize="21sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:background="@drawable/map_icon"
                    app:viewAspectRatio="0.73"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp" />
                <TextView
                    android:id="@+id/location_txt"
                    android:layout_marginLeft="6dp"
                    android:textColor="#FFD700"
                    android:textSize="15dp"
                    android:text="上海"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp" />
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/filter_btn"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/filter_icon"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/myRecycler"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/fab_margin"
            app:borderWidth="0dp"
            android:src="@drawable/fab_plus"
            app:backgroundTint="#FFD700"
            app:rippleColor="#EEAD0E"
            app:elevation="6dp"/>
    </LinearLayout>

    <!--点击下拉筛选界面-->
    <LinearLayout
        android:id="@+id/pull_down_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3E9967A"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/delete_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/delete_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/confirmed_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:gravity="center"
                android:padding="5dp"
                android:text="确定"
                android:textColor="#FFD700"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="性别"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/no_sex_pic"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/selector_sex_no_sex" />

                <ImageView
                    android:id="@+id/sex_male_pic"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/selector_sex_male" />

                <ImageView
                    android:id="@+id/sex_female_pic"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/selector_sex_female" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="18"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="年龄"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/age50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="50"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
            </LinearLayout>


            <SeekBar
                android:id="@+id/id_seekBar"
                android:layout_marginBottom="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:maxHeight="5dp"
                android:minHeight="2dp"
                android:max="50"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_bg"
                android:thumb="@drawable/selector_seekbar" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="花费"
                android:textColor="@color/colorAccent"
                android:textSize="14sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/myTreat_pic"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/selector_mytreat" />

                <ImageView
                    android:id="@+id/AA_pic"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/selector_aa" />

                <ImageView
                    android:id="@+id/femaleFree_pic"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:src="@drawable/selector_femalefree" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>